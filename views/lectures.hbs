{{!-- {{#if gt courseList 0}} --}}
<h1>{{pageTitle}}</h1>
<h2>Course: {{name}}</h2>
<a href="/add-lecture/{{courseId}}">Add Lecture</a>
{{#each lectures}}
<h2>{{name}}</h2>
<p>{{date}}</p>
<p>{{fileName}}</p>
<a href="/edit-lecture/{{id}}?edit=true">Edit Lecture</a>
<form action="/delete-lecture" method="POST">
    <input type="hidden" value="{{id}}" name="id">
    <button class="btn" type="submit">Delete</button>
</form>
{{/each}}
<form action="/upload"
    enctype="multipart/form-data" method="POST"> 
        <span>Upload Lecture:</span> 
        <input type="file" name="lecture" required/> <br> 
        <input type="submit" value="submit"> 
    </form> 