<h1>{{pageTitle}}</h1>
<form method="POST" action=
"{{#if editing}}/edit-lecture{{else}}/add-lecture{{/if}}">

    <div class="col">
        <div class="item">
            <label>Name</label>
            <input name="name" value="{{#if editing}}{{lecture.name}}{{/if}}">
        </div>
        <div class="item">
            <label>Date</label>
            <input name="date" value="{{#if editing}}{{lecture.date}}{{/if}}">
        </div>
    </div>
    {{#if editing}}
    <input type="hidden" value="{{lecture.id}}" name="lectureId">
    <input type="hidden" value="{{lecture.courseId}}" name="courseId">
    {{else}}
    <input type="hidden" value="{{courseId}}" name="courseId">
    {{/if}}
    <button type="submit">Submit</button>
</form>